package net.foxycorndog.jfoxylib.bundle;

public class Bundle
{
	private int		size;
	
	private Buffer	buffer;
	
	public Bundle(int numVertices)
	{
		this.size = numVertices;
		
		buffer = new Buffer(size);
	}
	
	public Buffer getBuffer()
	{
		return buffer;
	}
	
	public void setBuffer(Buffer buffer)
	{
		this.buffer = buffer;
	}
}