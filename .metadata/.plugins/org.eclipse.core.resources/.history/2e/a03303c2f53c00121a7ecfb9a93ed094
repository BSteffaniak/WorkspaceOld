package net.foxycorndog.shootcrap.tile;

public class Tile
{
	private int color;
	
	private static Tile tiles[];
	
	static
	{
		tiles = new Tile[]
		{
			new Tile(0x065C1C),
			new Tile(0x9B9B9B),
			new Tile(0x323232)
		};
	}
	
	public Tile(int color)
	{
		this.color = color;
	}
	
	public int getColor()
	{
		return color;
	}
	
	public static Tile getTile(int color)
	{
		for (Tile tile : tiles)
		{
			if (tile.getColor() == color)
			{
				return tile;
			}
		}
		
		return null;
	}
}