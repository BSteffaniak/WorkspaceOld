package net.foxycorndog.jfoxylib.components;

import org.eclipse.swt.graphics.ImageData;
import org.eclipse.swt.widgets.Display;

public class Image
{
	private org.eclipse.swt.graphics.Image image;
	
	public Image()
	{
		
	}
	
	public Image(String location)
	{
		image = new org.eclipse.swt.graphics.Image(Display.getDefault(), location);
	}
	
	public org.eclipse.swt.graphics.Image getImage()
	{
		for (int i = 0; i < 16 * 16; i++)
		{
			image.getImageData().setPixel(i / 16, i % 16, 0xff0000);
		}
		ImageData data = image.getImageData();
		
		data.setPixels(0, 0, 10, new int[] {0xff0000, 0xff0000, 0xff0000, 0xff0000, 0xff0000, 0xff0000, 0xff0000, 0xff0000, 0xff0000, 0xff0000}, 0);
		
		image = new org.eclipse.swt.graphics.Image(Display.getDefault(), data);
		
		return image;
	}
	
	public void setSize(int width, int height)
	{
		if (image == null)
		{
			image = new org.eclipse.swt.graphics.Image(Display.getDefault(), width, height);
		}
		else
		{
			ImageData data = image.getImageData();
			
			image = new org.eclipse.swt.graphics.Image(Display.getDefault(), width, height);
		}
	}
	
	public int getWidth()
	{
		return image.getBounds().width;
	}
	
	public int getHeight()
	{
		return image.getBounds().height;
	}
}